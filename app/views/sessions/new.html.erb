<div class="shop_around_form">

	<% if flash[:alert] %>
		<p id="notice" class="notice-exceplanation"><%= flash[:alert]%></p>
	<% end %>

	<%= form_tag do%>
		<fieldset>
			<legend>Please Log In</legend>
			<div>
				<%= label_tag :name, 'Name:'%>
				<%= text_field_tag :name, params[:name]%>
			</div>
			<div>
				<%= label_tag :password, 'Password'%>
				<%= password_field_tag :password, params[:password]%>
			</div>
			<div>
				<%= submit_tag "Login"%>
				OR <%= link_to 'Sign up', new_user_path %>
			</div>
		</fieldset>
	<%end%>
</div>
